<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">
      Conversor de moedas
    </div>
    <div class="card-block">
      <%= form_tag("/exchange", method: "post", id: "exchange_form") do %>
      <div class="local_currency">
        <div class="form-group">
          <p class="title">De:</p>
          <%= select_tag "currency", options_for_select(currency_select, "USD"), class: "form-control", id: "currency" %>
        </div>
        <div class="form-group">
          <p class="title">Valor:</p>
          <input type="number" name="quantity" id="quantity" class="form-control" placeholder="Informe valor" step="any" required>
        </div>
      </div>
      <div>
        <button type="button" id="changevalue">
          <img src="/setas.png"></img>
        </button>
      </div>
      <div class="destination_currency">
        <div class="form-group">
          <p class="title">Para:</p>
          <%= select_tag "currency_destination", options_for_select(currency_select, "BRL"), class: "form-control", id: "currency_destination"%>
        </div>
        <div class="form-group">
          <input type="text" id="result" name="result" class="form-control" placeholder="Resultado" readonly>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
